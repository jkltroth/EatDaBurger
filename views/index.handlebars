<div class="row">
    <div class="col">
        <ul>
            {{#each burgers}} 
                {{#unless devoured}} 
                    {{> burgers/devourBurg devoured=true}} 
                {{/unless}} 
            {{/each}}
        </ul>
    </div>
    <div class="col">
        <ul>
            {{#each burgers}} 
                {{#if devoured}} 
                    {{> burgers/devourBurg devoured=false}} 
                {{/if}} 
            {{/each}}
        </ul>
    </div>
</div>

<form>
    <div class="form-group">
        <label for="addBurg">Add a Burger...</label>
        <textarea class="form-control" id="addBurg" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>