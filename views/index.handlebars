<div class="container">
    <div class="row">
        <div class="col">
            <img src="../assets/img/burger.png">
            <h1>Eat-Da-Burger!</h1>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <ul>
                {{#each burgers}}
                    {{#unless devoured}} 
                        {{> burgers/devourBurg devoured=true}} 
                    {{/unless}} 
                {{/each}}
            </ul>
        </div>
        <div class="col">
            <ul>
                {{#each burgers}} 
                    {{#if devoured}} 
                        {{> burgers/devourBurg devoured=false}} 
                    {{/if}} 
                {{/each}}
            </ul>
        </div>
    </div>

    <form class="create-form">

        <div class="form-group">
            <input type="text" class="form-control" id="addBurg">
            {{!-- <textarea class="form-control" id="addBurg" rows="3"></textarea> --}}
        </div>

        <button type="submit" class="btn btn-primary">Add-Da-Burger!</button>
    </form>

</div>